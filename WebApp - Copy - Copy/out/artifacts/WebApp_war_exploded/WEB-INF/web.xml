<?xml version="1.0" encoding="UTF-8"?>


<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>getTopics</servlet-name>
        <servlet-class>webapp.getTopics</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getTopics</servlet-name>
        <url-pattern>/getTopics</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>addPost</servlet-name>
        <servlet-class>webapp.addPost</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addPost</servlet-name>
        <url-pattern>/addPost</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updatePost</servlet-name>
        <servlet-class>webapp.updatePost</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>updatePost</servlet-name>
        <url-pattern>/update_post</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>checkAdd</servlet-name>
        <servlet-class>webapp.checkAdd</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>checkAdd</servlet-name>
        <url-pattern>/checkAdd</url-pattern>
    </servlet-mapping>

</web-app>
